#:kivy 1.10.0

<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.8
            orientation: 'vertical'
            Label:
                text: "Multi Pong\nen reseau"
                bold: True
                size_hint_y: 0.6
                font_size: "48dp"
                color: (0, 1, 0, 1)
            Label:
                text: "Pong pour 10 joueurs"
                size_hint_y: 0.4
                font_size: "18dp"
                color: (0, 1, 0, 1)

        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Jouer'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.root.current = "1"
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Options'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.open_settings()
            Button:
                background_color: (0.8, 0.8, 0.8, 1)
                text: 'Quitter'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: app.do_quit()

<PongBall>:
    canvas:
        Rectangle:
            pos: self.pos
            size: int(root.height/33), int(root.height/33) # 22 pour 720

<PongPaddle>:
    canvas:
        Rectangle:
            pos: self.pos
            source: self.source
            size: int(root.height/5.142), int(root.height/5.142)

<PongPaddle3>:
    canvas:
        Rectangle:
            pos: self.pos
            source: self.source
            size: int(root.height/8), int(root.height/8)

<PongPaddle5>:
    canvas:
        Rectangle:
            pos: self.pos
            source: self.source
            size: int(root.height/8.5), int(root.height/8.5)

<PongPaddle6>:
    canvas:
        Rectangle:
            pos: self.pos
            source: self.source
            size: int(root.height/10.8), int(root.height/10.8)

<Screen1>:
    ball: pong_ball
    paddle_0: paddle0
    paddle_1: paddle1
    score_0: score0
    score_1: score1
    titre: Titre
    classement: clsmt
    canvas:
        Clear
    canvas:
        Color:
            rgba: 1,1,1,1
        Line:
            points: [int(x*(root.top/720)) for x in root.points]
            joint: 'miter'
            width: 3
            close: 1
        Line:
            points: [(x*(root.top/720)+(root.top/2)-10*(root.top/720)) for x in root.net]
            joint: 'miter'
            width: 3
            close: 1
    Label:  # score0
        id: score0
        font_size: int(root.width/30)
        color: 1, 0, 0 , 1
        center_x: -int(root.width * 3.2/8)
        center_y:  int(root.top * 3.5/8)
        text: root.score_0.text
    Label:  # score1
        id: score1
        font_size: int(root.width/30)
        color: 0, 1, 0, 1
        center_x: int(root.width/30)
        center_y:  int(root.top * 3.5/8)
        text: root.score_1.text
    Label:  # titre
        id: Titre
        color: 1, 1, 0, 1
        font_size:  int(root.width/28)
        center_x: int(root.width/3.2)
        center_y: int(root.top * 3.6/8)
        text: root.titre.text
    Label:  # classement
        id: clsmt
        color: 1, 1, 0, 1
        font_size: int(root.width/40)
        center_x: int(root.width/4)
        center_y: int(root.width/8)
        text: root.classement.text
    PongBall:  # pong_ball
        id: pong_ball
        pos: self.pos
    PongPaddle:  # paddle_0
        id: paddle0
        pos: self.pos
        source: self.source
    PongPaddle:   #paddle_1
        id: paddle1
        pos: self.pos
        source: self.source

